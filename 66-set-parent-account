public void setParent(Account acc, Contact con, Opportunity opp) {
    //code here
    if (acc != null)
        con.AccountId = acc.Id;
        opp.AccountId = acc.Id;
    else return;
    }
    if (con != null){
        if ( && con.Id != null)
            update con;
        else insert con;
    }
    if (opp != null){
        if (opp.Id != null)
            update opp;
         else insert opp;
    }
}